{
  "name": "cracked",
  "productName": "Cracked",
  "version": "0.2.20",
  "main": "main.js",
  "description": "Web audio, cracked.",
  "keywords": [
    "Web audio",
    "synthesis",
    "sound",
    "music"
  ],
  "homepage": "https://github.com/billorcutt/Cracked",
  "bugs": "https://github.com/billorcutt/Cracked/issues",
  "license": "MIT",
  "author": "Bill Orcutt <info@fakeestates.org> (https://twitter.com/billorcutt)",
  "dependencies": {
    "@electron/remote": "^2.1.1",
    "electron-json-storage": "1.1.0",
    "midi-writer-js": "^2.1.4",
    "monode": "2.2.3"
  },
  "devDependencies": {
    "@electron/notarize": "^2.2.0",
    "@electron/rebuild": "^4.0.3",
    "dotenv": "^16.4.5",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "electron-installer-dmg": "^4.0.0",
    "electron-packager": "^17.1.2",
    "patch-package": "^8.0.1"
  },
  "scripts": {
    "postinstall": "patch-package",
    "start": "electron .",
    "start-linux": "electron . --no-sandbox",
    "package": "electron-packager . Cracked --platform=darwin --arch=x64 --icon=./cracked.icns --overwrite --extend-info extend.plist",
    "package-mac": "electron-packager . Cracked --platform=darwin --arch=x64 --icon=./cracked.icns --overwrite --extend-info extend.plist",
    "package-linux": "electron-packager . Cracked --platform=linux --arch=x64 --icon=./cracked.icns --overwrite",
    "package-all": "electron-packager . Cracked --all --icon=./cracked.icns --overwrite --extend-info extend.plist",
    "make-installer": "electron-installer-dmg --overwrite Cracked-darwin-x64/Cracked.app Cracked --out=Installers/",
    "build-nosign": "electron-builder build --publish always"
  },
  "build": {
    "appId": "org.fakeestates.cracked",
    "mac": {
      "extendInfo": {
        "CFBundleDocumentTypes": [
          {
            "CFBundleTypeName": "All Files",
            "LSHandlerRank": "Alternate",
            "LSItemContentTypes": [
              "public.data",
              "public.content"
            ]
          }
        ]
      },
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "sign": true,
      "writeUpdateInfo": false
    },
    "afterSign": "scripts/notarize.js"
  }
}
